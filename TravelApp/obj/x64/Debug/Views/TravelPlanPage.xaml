<Page x:ConnectionId='1'
    x:Class="TravelApp.Views.TravelPlanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravelApp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:TravelApp.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="titleTextStyle" TargetType="TextBlock">
            <Setter Property="LineHeight" Value="70"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="mainTextStyle" TargetType="TextBlock">
            <Setter Property="LineHeight" Value="50"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="subTextStyle" TargetType="TextBlock">
            <Setter Property="LineHeight" Value="30"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
        </Style>
        <Style x:Key="infoTextStyle" TargetType="TextBlock">
            <Setter Property="LineHeight" Value="30"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="iconStyle" TargetType="Image">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="buttonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="buttonTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="messageTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        <converters:TitleFormatter x:Key="TitleFormatter"/>
        <converters:StartdateFormatter x:Key="StartdateFormatter"/>
        <converters:EnddateFormatter x:Key="EnddateFormatter"/>
        <converters:DestinationFormatter x:Key="DestinationFormatter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Margin="20,0,0,0">
            <TextBlock x:ConnectionId='21'                                                                                     
                       Style="{StaticResource titleTextStyle}"
                   />
            <TextBlock x:ConnectionId='22'                                         
                       Style="{StaticResource messageTextStyle}"
                   />
            <ProgressRing x:ConnectionId='23' x:Name="LoadingIndicator"
                                                                        
                          Margin="0,10,0,0"
                          HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Width="350"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,0">
            <TextBox x:ConnectionId='15' x:Name="nameInput"
                     Header="Name travelplan:"
                     PlaceholderText="Name"
                     Margin="0,10,0,0"
                                                                                   />
            <DatePicker x:ConnectionId='16' x:Name="startDatePicker"
                        Header="Startdate:"
                        Margin="0,10,0,0"
                                                                                      />
            <DatePicker x:ConnectionId='17' x:Name="endDatePicker"
                        Header="Enddate:"
                        Margin="0,10,0,0"
                                                                                      />
            <TextBox x:ConnectionId='18' x:Name="destinationInput"
                     Header="Destination:"
                     PlaceholderText="Destination"
                     Margin="0,10,0,0"
                                                                                   />
            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='19' x:Name="NewButton"
                    Style="{StaticResource buttonStyle}" 
                                           
                                                                        >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/AddIcon.png" 
                           Style="{StaticResource iconStyle}"/>
                        <TextBlock Text="New"
                               Style="{StaticResource buttonTextStyle}"/>
                    </StackPanel>
                </Button>
                <Button x:ConnectionId='20' x:Name="CloseButton"
                    Style="{StaticResource buttonStyle}" 
                                                                                  
                                                                                                  >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/CloseIcon.png" 
                           Style="{StaticResource iconStyle}"/>
                        <TextBlock Text="Close"
                               Style="{StaticResource buttonTextStyle}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
        <ListView x:ConnectionId='2' x:Name="TravelPlanList" 
                  Grid.Row="2"
                                                                      
                                                                         
                  HorizontalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate                              >
                    <Border x:ConnectionId='10' BorderThickness="0,0,0,1" BorderBrush="#c0c0c0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='11' Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="7"
                                                           
                                       Style="{StaticResource mainTextStyle}"/>
                            <Image Grid.Row="1"
                                   Grid.Column="1" 
                                   Source="/Assets/ItemIcon.png" 
                                   Style="{StaticResource iconStyle}"/>
                            <TextBlock x:ConnectionId='12' Grid.Row="1"
                                       Grid.Column="2"
                                                                             
                                       Style="{StaticResource subTextStyle}"/>
                            <Image Grid.Row="1"
                                   Grid.Column="3" 
                                   Source="/Assets/TaskIcon.png" 
                                   Style="{StaticResource iconStyle}"/>
                            <TextBlock x:ConnectionId='13' Grid.Row="1"
                                       Grid.Column="4"
                                                                             
                                       Style="{StaticResource subTextStyle}"/>
                            <Image Grid.Row="1"
                                   Grid.Column="5" 
                                   Source="/Assets/LocationIcon.png" 
                                   Style="{StaticResource iconStyle}"/>
                            <TextBlock x:ConnectionId='14' Grid.Row="1"
                                       Grid.Column="6"
                                                                         
                                       Style="{StaticResource subTextStyle}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Border BorderThickness="0,3,0,0" 
                BorderBrush="Black" 
                Grid.Row="3">
            <StackPanel>
                <TextBlock
                        Style="{StaticResource infoTextStyle}"
                        TextDecorations="Underline"
                        Text="Details:"
                        />
                <TextBlock x:ConnectionId='3'
                        Style="{StaticResource infoTextStyle}"
                                                                          
                        />
                <TextBlock x:ConnectionId='4'
                        Style="{StaticResource infoTextStyle}"
                                                                                                                              
                        />
                <TextBlock x:ConnectionId='5'
                        Style="{StaticResource infoTextStyle}"
                                                                                                                          
                        />
                <TextBlock x:ConnectionId='6'
                        Style="{StaticResource infoTextStyle}"
                                                                                                                                  
                        />
                <StackPanel Orientation="Horizontal" Grid.Row="5">
                    <Button x:ConnectionId='7' x:Name="SelectButton" 
                            Style="{StaticResource buttonStyle}"
                                                                                         
                                                      
                                                                                >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/SelectIcon.png" 
                                   Style="{StaticResource iconStyle}"/>
                            <TextBlock Text="Select"
                                       Style="{StaticResource buttonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <!--<Button x:Name="EditButton" 
                            Style="{StaticResource buttonStyle}"
                            Visibility="{x:Bind _vm.ControlButtonsVisible, Mode=OneWay}" 
                            Click="EditButton_Click"
                            IsEnabled="{x:Bind _vm.ButtonsEnabled}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/EditIcon.png" 
                                   Style="{StaticResource iconStyle}"/>
                            <TextBlock Text="Edit"
                                       Style="{StaticResource buttonTextStyle}"/>
                        </StackPanel>
                    </Button>-->
                    <Button x:ConnectionId='8' x:Name="DeleteButton" 
                            Style="{StaticResource buttonStyle}"
                                                                                         
                                                      
                                                                                >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/DeleteIcon.png" 
                                   Style="{StaticResource iconStyle}"/>
                            <TextBlock Text="Delete"
                                       Style="{StaticResource buttonTextStyle}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>

